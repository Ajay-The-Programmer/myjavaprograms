// pro5- Accept the names of three files and copy the contents of the first two to the third

package ass2pro1;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.Serializable;


public class MainFileDataCopy implements Serializable {

	private static final long serialVersionUID = 1L;

	public static void main(String[] args) {
	FileReader file1;
	FileReader file2;
	FileWriter file3;
//	FileOutputStream file4;
	
	try(file1=new FileReader("/home/ajaydevkar/FileHandling/Stud.dat");
			file2=new FileReader("/home/ajaydevkar/FileHandling/Clg.txt");
			file3=new FileWriter("/home/ajaydevkar/FileHandling/SCinfo.txt"){
		
//		file4=new FileOutputStream("/home/ajaydevkar/FileHandling/Clg.txt")
		int data;
		while((data=file1.read())!=-1) {
			file3.write(data);
			
//		System.out.print((char)data);
		}if(file1.read()!=1) {
			System.out.println("File Write Successfull.....");
		}
//		int data=-1;
//		while((data=file3.read())!=-1) {
//			System.out.print((char)data);
//
//		}
		file1.close();
		file2.close();
		file3.close();
		
	}catch(Exception e) {
		System.out.println(e.toString());
		
	}
}
}	
